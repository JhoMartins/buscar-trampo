<div class="jobs">
    <div class="center">
      <%= form_with(url: "/jobs", method: "get", local: true, :class => 'search-form') do |f|%>
        <div class="input-field">
          <%= f.text_field :search, value:@search, type:"search", required:true %>
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
        </div>
        <%= f.submit "Buscar", name: nil, class: "waves-effect waves-light btn search-button" %>
      <% end %>
      <% @jobs.each do |j| %>
        <div class="row">
          <div class="col s12 m12 l12">
            <div class="card horizontal">
              <div class="card-content card-jobs">
                <div class="col s12 m2 l2">
                  <img class="responsive-img" src=<%= j[:image_url] %> />
                </div>
                <div class="wrapper-jobs col s12 m8 l8">
                  <p class="company"><%= j[:title] %></p>
                  <p class="title"><%= j[:company] %></p>
                  <p class="">Tag: <span class="tag"><%= j.tag.name %></span></p>
                </div>
                <div class="col s12 m2 l2 right-align">
                  <a href=<%= "/jobs/#{j[:id]}" %>><button class="visualizar-btn">Visualizar</button></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
</div>
